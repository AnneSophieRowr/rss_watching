- if items.empty?
  = t('item.empty')

- else
  .row.paginate
    .col-md-8
      = paginate items
    .col-md-4
      %p.pull-right= [items.total_count.to_s, t('model.items').downcase].join(" ")

  %table.table.table-striped
    %thead
      %tr
        %th= t('item.title')
        %th= t('item.article_link')
        %th= t('item.date')
        %th= t('item.feeds')
        %th
    %tbody
      - items.each do |item|
        %tr
          %td= item.title
          %td= item.article_link
          %td= item.date
          %td= item.feeds_links
          %td
            = link_to item, class: 'btn btn-default btn-sm', title: t('item.show') do
              %span.fa.fa-eye
            = link_to edit_item_path(item), :class => 'btn btn-default btn-sm', :title => t('item.edit') do
              %span.fa.fa-edit
            = link_to item_path(item), :class => 'btn btn-default btn-sm', :title => t('item.destroy'), method: :delete, data: { confirm: t('item.confirm_destroy') } do
              %span.fa.fa-times


