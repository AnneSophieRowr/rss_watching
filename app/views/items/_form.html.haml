= simple_form_for @item, :html => {:class => 'form-horizontal'} do |f|

  .well
    = f.input :description
    = f.input :title
    = f.input :link
    = f.input :user_id, collection: users, selected: (@item.user.nil? ? current_user.id : @item.user.id)
    = f.input :date, as: :datetimepicker
    = f.association :feeds, collection: feeds, input_html: {multiple: 'multiple'}

  .form_actions
    = f.button :submit, :class => 'btn btn-default'
    = link_to t('helpers.submit.cancel'), :back, :class => 'btn btn-default'

